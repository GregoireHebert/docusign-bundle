<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="docusign_callback" class="DocusignBundle\Controller\Callback" public="true">
            <tag name="controller.service_arguments"/>
        </service>
        <service id="DocusignBundle\Controller\Callback" alias="docusign_callback" public="true" />

        <service id="docusign_sign" class="DocusignBundle\Controller\Sign" public="true">
            <tag name="controller.service_arguments"/>
        </service>
        <service id="DocusignBundle\Controller\Sign" alias="docusign_sign" public="true" />

        <service id="docusign_webhook" class="DocusignBundle\Controller\Webhook" public="true">
            <tag name="controller.service_arguments"/>
        </service>
        <service id="DocusignBundle\Controller\Webhook" alias="docusign_webhook" public="true" />

        <service id="docusign_envelope_builder" class="DocusignBundle\EnvelopeBuilder" public="false" shared="false" autowire="false" />
        <service id="DocusignBundle\EnvelopeBuilder" alias="docusign_envelope_builder" public="false" />

        <service id="docusign_signature_extractor" class="DocusignBundle\Utils\SignatureExtractor" public="false" autowire="true" />
        <service id="DocusignBundle\Utils\SignatureExtractor" alias="docusign_signature_extractor" public="false" />

        <service id="docusign_grant_jwt" class="DocusignBundle\Grant\JwtGrant" public="false">
            <argument>%docusign.auth_jwt.private_key%</argument>
            <argument>%docusign.auth_jwt.integration_key%</argument>
            <argument>%docusign.auth_jwt.user_guid%</argument>
            <argument>%docusign.account_api_uri%</argument>
            <argument>%docusign.auth_jwt.ttl%</argument>
        </service>
        <service id="DocusignBundle\Grant\JwtGrant" alias="docusign_grant_jwt" public="false" />
        <service id="DocusignBundle\Grant\GrantInterface" alias="docusign_grant_jwt" public="false" />
    </services>
</container>
