{% extends 'base.html.twig' %}

{% block title %}Documents list ({{ mode }} mode){% endblock %}

{% block content %}
    <ul>
        {% for name, path in documents %}
            <li><a href="{{ path(route_name, {'path': path}) }}">{{ name }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}

{% block footer %}
    <p><a href="{{ path('homepage') }}">&#8592; Back to the homepage</a></p>
{% endblock %}
